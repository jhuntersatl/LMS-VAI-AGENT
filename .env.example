# ============================================================================
# LMS Voice AI Agent - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env files with real credentials

# ----------------------------------------------------------------------------
# LMStudio Configuration
# ----------------------------------------------------------------------------
LMSTUDIO_BASE_URL=http://localhost:1234
LMSTUDIO_MODEL=llama-3-70b
LMSTUDIO_API_KEY=
LMSTUDIO_TIMEOUT=30

# ----------------------------------------------------------------------------
# MCP Server Configuration
# ----------------------------------------------------------------------------
MCP_SERVER_URL=http://localhost:8000
MCP_API_KEY=your_mcp_api_key_here
MCP_TIMEOUT=10

# ----------------------------------------------------------------------------
# Speech-to-Text (Whisper) Configuration
# ----------------------------------------------------------------------------
# Model sizes: tiny, base, small, medium, large
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
# Set to 'cuda' or 'mps' if you have GPU
# WHISPER_DEVICE=cuda

# Language for transcription (leave empty for auto-detect)
WHISPER_LANGUAGE=en

# ----------------------------------------------------------------------------
# Text-to-Speech (Coqui TTS) Configuration
# ----------------------------------------------------------------------------
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
TTS_VOCODER=vocoder_models/en/ljspeech/hifigan_v2
TTS_DEVICE=cpu
# Set to 'cuda' if you have GPU
# TTS_DEVICE=cuda

# Voice speed (0.5 = slower, 1.0 = normal, 2.0 = faster)
TTS_SPEED=1.0

# ----------------------------------------------------------------------------
# Audio Configuration
# ----------------------------------------------------------------------------
# Microphone sample rate (Hz)
AUDIO_SAMPLE_RATE=16000

# Audio chunk size for streaming
AUDIO_CHUNK_SIZE=1024

# Voice Activity Detection threshold (0.0-1.0)
VAD_THRESHOLD=0.5

# Silence duration to stop recording (seconds)
SILENCE_DURATION=2.0

# ----------------------------------------------------------------------------
# Agent Behavior Configuration
# ----------------------------------------------------------------------------
# Wake word (leave empty to disable)
WAKE_WORD=

# Maximum conversation history to maintain
MAX_HISTORY=10

# Response timeout (seconds)
RESPONSE_TIMEOUT=30

# Enable debug mode
DEBUG=false

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/vai-agent.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ----------------------------------------------------------------------------
# Performance Configuration
# ----------------------------------------------------------------------------
# Number of async workers
WORKER_THREADS=4

# Enable GPU acceleration
USE_GPU=false

# Cache directory for models
CACHE_DIR=./models
